{{#each challenges}}
  <div class="row">
    <div class="span3">
      <h3>From: <a href="#user/{{from}}">{{from_name}}</a></h3>
    </div>
    <div class="span9">
      <h3>Donation amount:
        $<span data-challenge-amt="{{from}}">{{flat}}</span>
      </h3>
      <span class="hidden data-challenge-info"
      data-challenge-from="{{from}}"
      data-challenge-f="{{flat}}"
      data-challenge-b="{{bonus}}"
      data-challenge-s="{{scale}}"
      data-challenge-u="{{unit}}"></span>
    </div>
  </div>
{{else}}
  <div class="row">
    <div class="span3">
      <h3>No supporters yet!</h3>
      {{#unless ../is_current}}
      <a href="" class="btn btn-success">Be the first one!</a>
      {{/unless}}
    </div>
  </div>
{{/each}}
