<section>
  <div class="page-header">
    {{#if is_current}}
    <h1>Charities you support</h1>
    {{else}}
    <h1>Charities {{user_name}} supports</h1>
    {{/if}}
  </div>
  {{#each charities}}
  <div class="row">
    <ul class="thumbnails">
      <li class="span12">
        <div class="thumbnail span2 offset1">
          <img class="charity_img" src="{{img}}" />
        </div>
        <div class="span8">
          <h3>{{name}}</h3>
          <h4><a href="{{url}}">Charity website</a></h4>
          <p>{{blurb}}</p>
        </div>
      </li>
    </ul>
  </div>
  {{/each}}
</section>
