<header class="subhead">
  <div class="row">
    <ul class="thumbnails">
      <li class="span12">
        <div class="thumbnail span2 offset1">
          <img class="user_img" src="{{img}}" />
        </div>
        <div class="span8">
          {{#if is_current}}
          <h1>Your activity</h1>
          <p class="lead">Your races</p>
          {{else}}
          <h1>{{name}}'s races</h1>
          <p class="lead">Check out what {{name}} is up to</p>
          {{/if}}
        </div>
      </li>
    </ul>
  </div>
</header>
